generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model user {
  userID    Int      @id @default(autoincrement())
  email     String   @unique
  username  String   @unique
  name      String
  password  String
  books     book[]
}

model book {
  bookID    Int      @id @default(autoincrement())
  title     String
  authorID  Int
  category  String
  bookDesc  String
  price     Int
  publicationDate DateTime
  coverPath String
  audioPath String
  user      user     @relation(fields: [authorID], references: [userID])
}
